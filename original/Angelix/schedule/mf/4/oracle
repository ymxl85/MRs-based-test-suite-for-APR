#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "0 2 0" "$SCRIPT_DIR/inputs/in1"
      ;;
    2)
      test-schedule  "0 2 1" "$SCRIPT_DIR/inputs/in2"
      ;;
    3)
      test-schedule  "0 2 2" "$SCRIPT_DIR/inputs/in3"
      ;;
    4)
      test-schedule  "0 2 0" "$SCRIPT_DIR/inputs/in4"
      ;;
    5)
      test-schedule  "0 2 0" "$SCRIPT_DIR/inputs/in5"
      ;;
    6)
      test-schedule  "0 2 1" "$SCRIPT_DIR/inputs/in6"
      ;;
    7)
      test-schedule  "0 2 1" "$SCRIPT_DIR/inputs/in7"
      ;;
    8)
      test-schedule  "0 2 2" "$SCRIPT_DIR/inputs/in8"
      ;;
    9)
      test-schedule  "0 2 2" "$SCRIPT_DIR/inputs/in9"
      ;;
    10)
      test-schedule  "0 2 0" "$SCRIPT_DIR/inputs/in10"
      ;;
    11)
      test-schedule  "0 2 1" "$SCRIPT_DIR/inputs/in11"
      ;;
    12)
      test-schedule  "0 2 2" "$SCRIPT_DIR/inputs/in12"
      ;;
esac
