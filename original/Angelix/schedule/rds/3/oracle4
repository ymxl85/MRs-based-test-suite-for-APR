#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "8 8 8" "$SCRIPT_DIR/inputs4/in1"
      ;;
    2)
      test-schedule  "8 7 1" "$SCRIPT_DIR/inputs4/in2"
      ;;
    3)
      test-schedule  "3 1 5" "$SCRIPT_DIR/inputs4/in3"
      ;;
    4)
      test-schedule  "6 5 7" "$SCRIPT_DIR/inputs4/in4"
      ;;
    5)
      test-schedule  "1 4 9" "$SCRIPT_DIR/inputs4/in5"
      ;;
    6)
      test-schedule  "3 5 1" "$SCRIPT_DIR/inputs4/in6"
      ;;
    7)
      test-schedule  "8 8 2" "$SCRIPT_DIR/inputs4/in7"
      ;;
    8)
      test-schedule  "7 5 7" "$SCRIPT_DIR/inputs4/in8"
      ;;
    9)
      test-schedule  "0 7 8" "$SCRIPT_DIR/inputs4/in9"
      ;;
    10)
      test-schedule  "9 1 8" "$SCRIPT_DIR/inputs4/in10"
      ;;
    11)
      test-schedule  "5 9 0" "$SCRIPT_DIR/inputs4/in11"
      ;;
    12)
      test-schedule  "0 7 5" "$SCRIPT_DIR/inputs4/in12"
      ;;
    13)
      test-schedule  "3 4 3" "$SCRIPT_DIR/inputs4/in13"
      ;;
    14)
      test-schedule  "4 8 3" "$SCRIPT_DIR/inputs4/in14"
      ;;
    15)
      test-schedule  "8 5 6" "$SCRIPT_DIR/inputs4/in15"
      ;;
    16)
      test-schedule  "4 5 0" "$SCRIPT_DIR/inputs4/in16"
      ;;
    17)
      test-schedule  "9 9 8" "$SCRIPT_DIR/inputs4/in17"
      ;;
    18)
      test-schedule  "7 2 9" "$SCRIPT_DIR/inputs4/in18"
      ;;
    19)
      test-schedule  "9 8 4" "$SCRIPT_DIR/inputs4/in19"
      ;;
    20)
      test-schedule  "8 1 1" "$SCRIPT_DIR/inputs4/in20"
      ;;
    21)
      test-schedule  "9 7 9" "$SCRIPT_DIR/inputs4/in21"
      ;;
    22)
      test-schedule  "2 4 2" "$SCRIPT_DIR/inputs4/in22"
      ;;
    23)
      test-schedule  "5 8 4" "$SCRIPT_DIR/inputs4/in23"
      ;;
    24)
      test-schedule  "1 1 4" "$SCRIPT_DIR/inputs4/in24"
      ;;
    25)
      test-schedule  "6 6 7" "$SCRIPT_DIR/inputs4/in25"
      ;;
    26)
      test-schedule  "3 7 0" "$SCRIPT_DIR/inputs4/in26"
      ;;
    27)
      test-schedule  "2 3 9" "$SCRIPT_DIR/inputs4/in27"
      ;;
    28)
      test-schedule  "0 4 8" "$SCRIPT_DIR/inputs4/in28"
      ;;
    29)
      test-schedule  "4 9 3" "$SCRIPT_DIR/inputs4/in29"
      ;;
    30)
      test-schedule  "9 5 5" "$SCRIPT_DIR/inputs4/in30"
      ;;
    31)
      test-schedule  "8 1 5" "$SCRIPT_DIR/inputs4/in31"
      ;;
    32)
      test-schedule  "6 0 9" "$SCRIPT_DIR/inputs4/in32"
      ;;
    33)
      test-schedule  "5 4 4" "$SCRIPT_DIR/inputs4/in33"
      ;;
    34)
      test-schedule  "4 8 9" "$SCRIPT_DIR/inputs4/in34"
      ;;
    35)
      test-schedule  "0 2 8" "$SCRIPT_DIR/inputs4/in35"
      ;;
esac
