#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "0 1 6" "$SCRIPT_DIR/inputs7/in1"
      ;;
    2)
      test-schedule  "9 4 3" "$SCRIPT_DIR/inputs7/in2"
      ;;
    3)
      test-schedule  "1 8 1" "$SCRIPT_DIR/inputs7/in3"
      ;;
    4)
      test-schedule  "3 6 2" "$SCRIPT_DIR/inputs7/in4"
      ;;
    5)
      test-schedule  "0 2 4" "$SCRIPT_DIR/inputs7/in5"
      ;;
    6)
      test-schedule  "7 3 6" "$SCRIPT_DIR/inputs7/in6"
      ;;
    7)
      test-schedule  "2 7 4" "$SCRIPT_DIR/inputs7/in7"
      ;;
    8)
      test-schedule  "0 8 9" "$SCRIPT_DIR/inputs7/in8"
      ;;
    9)
      test-schedule  "7 6 7" "$SCRIPT_DIR/inputs7/in9"
      ;;
    10)
      test-schedule  "1 1 8" "$SCRIPT_DIR/inputs7/in10"
      ;;
    11)
      test-schedule  "0 5 7" "$SCRIPT_DIR/inputs7/in11"
      ;;
    12)
      test-schedule  "6 6 5" "$SCRIPT_DIR/inputs7/in12"
      ;;
    13)
      test-schedule  "1 3 2" "$SCRIPT_DIR/inputs7/in13"
      ;;
    14)
      test-schedule  "4 0 4" "$SCRIPT_DIR/inputs7/in14"
      ;;
    15)
      test-schedule  "2 0 8" "$SCRIPT_DIR/inputs7/in15"
      ;;
    16)
      test-schedule  "1 2 8" "$SCRIPT_DIR/inputs7/in16"
      ;;
    17)
      test-schedule  "1 5 4" "$SCRIPT_DIR/inputs7/in17"
      ;;
    18)
      test-schedule  "0 3 9" "$SCRIPT_DIR/inputs7/in18"
      ;;
    19)
      test-schedule  "2 9 0" "$SCRIPT_DIR/inputs7/in19"
      ;;
    20)
      test-schedule  "6 6 6" "$SCRIPT_DIR/inputs7/in20"
      ;;
    21)
      test-schedule  "3 7 4" "$SCRIPT_DIR/inputs7/in21"
      ;;
    22)
      test-schedule  "4 4 6" "$SCRIPT_DIR/inputs7/in22"
      ;;
    23)
      test-schedule  "6 0 8" "$SCRIPT_DIR/inputs7/in23"
      ;;
    24)
      test-schedule  "9 7 3" "$SCRIPT_DIR/inputs7/in24"
      ;;
    25)
      test-schedule  "8 7 0" "$SCRIPT_DIR/inputs7/in25"
      ;;
    26)
      test-schedule  "8 9 2" "$SCRIPT_DIR/inputs7/in26"
      ;;
    27)
      test-schedule  "8 1 7" "$SCRIPT_DIR/inputs7/in27"
      ;;
    28)
      test-schedule  "1 1 0" "$SCRIPT_DIR/inputs7/in28"
      ;;
    29)
      test-schedule  "4 0 0" "$SCRIPT_DIR/inputs7/in29"
      ;;
    30)
      test-schedule  "5 4 6" "$SCRIPT_DIR/inputs7/in30"
      ;;
    31)
      test-schedule  "0 4 5" "$SCRIPT_DIR/inputs7/in31"
      ;;
    32)
      test-schedule  "7 6 1" "$SCRIPT_DIR/inputs7/in32"
      ;;
    33)
      test-schedule  "8 5 6" "$SCRIPT_DIR/inputs7/in33"
      ;;
    34)
      test-schedule  "5 6 5" "$SCRIPT_DIR/inputs7/in34"
      ;;
    35)
      test-schedule  "7 8 3" "$SCRIPT_DIR/inputs7/in35"
      ;;
esac
