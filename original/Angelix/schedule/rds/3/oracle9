#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "7 7 9" "$SCRIPT_DIR/inputs9/in1"
      ;;
    2)
      test-schedule  "4 8 1" "$SCRIPT_DIR/inputs9/in2"
      ;;
    3)
      test-schedule  "3 8 2" "$SCRIPT_DIR/inputs9/in3"
      ;;
    4)
      test-schedule  "4 1 3" "$SCRIPT_DIR/inputs9/in4"
      ;;
    5)
      test-schedule  "8 9 1" "$SCRIPT_DIR/inputs9/in5"
      ;;
    6)
      test-schedule  "5 3 7" "$SCRIPT_DIR/inputs9/in6"
      ;;
    7)
      test-schedule  "0 7 9" "$SCRIPT_DIR/inputs9/in7"
      ;;
    8)
      test-schedule  "1 9 5" "$SCRIPT_DIR/inputs9/in8"
      ;;
    9)
      test-schedule  "4 0 8" "$SCRIPT_DIR/inputs9/in9"
      ;;
    10)
      test-schedule  "9 7 6" "$SCRIPT_DIR/inputs9/in10"
      ;;
    11)
      test-schedule  "4 9 2" "$SCRIPT_DIR/inputs9/in11"
      ;;
    12)
      test-schedule  "8 1 7" "$SCRIPT_DIR/inputs9/in12"
      ;;
    13)
      test-schedule  "9 1 0" "$SCRIPT_DIR/inputs9/in13"
      ;;
    14)
      test-schedule  "8 8 1" "$SCRIPT_DIR/inputs9/in14"
      ;;
    15)
      test-schedule  "7 8 2" "$SCRIPT_DIR/inputs9/in15"
      ;;
    16)
      test-schedule  "7 9 0" "$SCRIPT_DIR/inputs9/in16"
      ;;
    17)
      test-schedule  "2 0 7" "$SCRIPT_DIR/inputs9/in17"
      ;;
    18)
      test-schedule  "0 4 6" "$SCRIPT_DIR/inputs9/in18"
      ;;
    19)
      test-schedule  "6 3 5" "$SCRIPT_DIR/inputs9/in19"
      ;;
    20)
      test-schedule  "7 2 8" "$SCRIPT_DIR/inputs9/in20"
      ;;
    21)
      test-schedule  "6 3 0" "$SCRIPT_DIR/inputs9/in21"
      ;;
    22)
      test-schedule  "6 7 5" "$SCRIPT_DIR/inputs9/in22"
      ;;
    23)
      test-schedule  "2 3 5" "$SCRIPT_DIR/inputs9/in23"
      ;;
    24)
      test-schedule  "4 8 6" "$SCRIPT_DIR/inputs9/in24"
      ;;
    25)
      test-schedule  "4 4 0" "$SCRIPT_DIR/inputs9/in25"
      ;;
    26)
      test-schedule  "9 2 4" "$SCRIPT_DIR/inputs9/in26"
      ;;
    27)
      test-schedule  "7 4 1" "$SCRIPT_DIR/inputs9/in27"
      ;;
    28)
      test-schedule  "2 1 3" "$SCRIPT_DIR/inputs9/in28"
      ;;
    29)
      test-schedule  "8 6 0" "$SCRIPT_DIR/inputs9/in29"
      ;;
    30)
      test-schedule  "6 7 8" "$SCRIPT_DIR/inputs9/in30"
      ;;
    31)
      test-schedule  "3 0 4" "$SCRIPT_DIR/inputs9/in31"
      ;;
    32)
      test-schedule  "6 0 8" "$SCRIPT_DIR/inputs9/in32"
      ;;
    33)
      test-schedule  "7 0 6" "$SCRIPT_DIR/inputs9/in33"
      ;;
    34)
      test-schedule  "2 8 2" "$SCRIPT_DIR/inputs9/in34"
      ;;
    35)
      test-schedule  "3 7 7" "$SCRIPT_DIR/inputs9/in35"
      ;;
esac
