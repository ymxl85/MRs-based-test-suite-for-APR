#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "7 1 3" "$SCRIPT_DIR/inputs5/in1"
      ;;
    2)
      test-schedule  "5 8 0" "$SCRIPT_DIR/inputs5/in2"
      ;;
    3)
      test-schedule  "5 8 3" "$SCRIPT_DIR/inputs5/in3"
      ;;
    4)
      test-schedule  "3 3 5" "$SCRIPT_DIR/inputs5/in4"
      ;;
    5)
      test-schedule  "3 2 5" "$SCRIPT_DIR/inputs5/in5"
      ;;
    6)
      test-schedule  "7 8 1" "$SCRIPT_DIR/inputs5/in6"
      ;;
    7)
      test-schedule  "8 4 8" "$SCRIPT_DIR/inputs5/in7"
      ;;
    8)
      test-schedule  "7 0 9" "$SCRIPT_DIR/inputs5/in8"
      ;;
    9)
      test-schedule  "7 6 7" "$SCRIPT_DIR/inputs5/in9"
      ;;
    10)
      test-schedule  "0 8 9" "$SCRIPT_DIR/inputs5/in10"
      ;;
    11)
      test-schedule  "0 9 6" "$SCRIPT_DIR/inputs5/in11"
      ;;
    12)
      test-schedule  "5 1 5" "$SCRIPT_DIR/inputs5/in12"
      ;;
    13)
      test-schedule  "9 1 8" "$SCRIPT_DIR/inputs5/in13"
      ;;
    14)
      test-schedule  "3 7 0" "$SCRIPT_DIR/inputs5/in14"
      ;;
    15)
      test-schedule  "4 8 5" "$SCRIPT_DIR/inputs5/in15"
      ;;
    16)
      test-schedule  "5 2 9" "$SCRIPT_DIR/inputs5/in16"
      ;;
    17)
      test-schedule  "8 2 5" "$SCRIPT_DIR/inputs5/in17"
      ;;
    18)
      test-schedule  "3 7 1" "$SCRIPT_DIR/inputs5/in18"
      ;;
    19)
      test-schedule  "5 4 5" "$SCRIPT_DIR/inputs5/in19"
      ;;
    20)
      test-schedule  "2 3 1" "$SCRIPT_DIR/inputs5/in20"
      ;;
    21)
      test-schedule  "2 5 2" "$SCRIPT_DIR/inputs5/in21"
      ;;
    22)
      test-schedule  "8 1 7" "$SCRIPT_DIR/inputs5/in22"
      ;;
    23)
      test-schedule  "6 2 3" "$SCRIPT_DIR/inputs5/in23"
      ;;
    24)
      test-schedule  "4 9 2" "$SCRIPT_DIR/inputs5/in24"
      ;;
    25)
      test-schedule  "1 8 6" "$SCRIPT_DIR/inputs5/in25"
      ;;
    26)
      test-schedule  "9 0 9" "$SCRIPT_DIR/inputs5/in26"
      ;;
    27)
      test-schedule  "2 9 1" "$SCRIPT_DIR/inputs5/in27"
      ;;
    28)
      test-schedule  "6 4 0" "$SCRIPT_DIR/inputs5/in28"
      ;;
    29)
      test-schedule  "4 6 1" "$SCRIPT_DIR/inputs5/in29"
      ;;
    30)
      test-schedule  "9 3 4" "$SCRIPT_DIR/inputs5/in30"
      ;;
    31)
      test-schedule  "8 0 6" "$SCRIPT_DIR/inputs5/in31"
      ;;
    32)
      test-schedule  "8 7 6" "$SCRIPT_DIR/inputs5/in32"
      ;;
    33)
      test-schedule  "0 9 8" "$SCRIPT_DIR/inputs5/in33"
      ;;
    34)
      test-schedule  "6 0 9" "$SCRIPT_DIR/inputs5/in34"
      ;;
    35)
      test-schedule  "8 5 1" "$SCRIPT_DIR/inputs5/in35"
      ;;
esac
