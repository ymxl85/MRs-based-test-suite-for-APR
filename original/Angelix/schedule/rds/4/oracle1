#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "5 1 8" "$SCRIPT_DIR/inputs1/in1"
      ;;
    2)
      test-schedule  "5 3 3" "$SCRIPT_DIR/inputs1/in2"
      ;;
    3)
      test-schedule  "6 0 7" "$SCRIPT_DIR/inputs1/in3"
      ;;
    4)
      test-schedule  "1 2 1" "$SCRIPT_DIR/inputs1/in4"
      ;;
    5)
      test-schedule  "2 1 6" "$SCRIPT_DIR/inputs1/in5"
      ;;
    6)
      test-schedule  "5 5 9" "$SCRIPT_DIR/inputs1/in6"
      ;;
    7)
      test-schedule  "5 5 1" "$SCRIPT_DIR/inputs1/in7"
      ;;
    8)
      test-schedule  "7 5 3" "$SCRIPT_DIR/inputs1/in8"
      ;;
    9)
      test-schedule  "8 6 5" "$SCRIPT_DIR/inputs1/in9"
      ;;
    10)
      test-schedule  "1 5 0" "$SCRIPT_DIR/inputs1/in10"
      ;;
    11)
      test-schedule  "5 3 5" "$SCRIPT_DIR/inputs1/in11"
      ;;
    12)
      test-schedule  "4 0 8" "$SCRIPT_DIR/inputs1/in12"
      ;;
esac
