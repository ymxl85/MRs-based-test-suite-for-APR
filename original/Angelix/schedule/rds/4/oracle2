#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "5 5 3" "$SCRIPT_DIR/inputs2/in1"
      ;;
    2)
      test-schedule  "1 5 2" "$SCRIPT_DIR/inputs2/in2"
      ;;
    3)
      test-schedule  "6 8 4" "$SCRIPT_DIR/inputs2/in3"
      ;;
    4)
      test-schedule  "6 8 6" "$SCRIPT_DIR/inputs2/in4"
      ;;
    5)
      test-schedule  "8 7 7" "$SCRIPT_DIR/inputs2/in5"
      ;;
    6)
      test-schedule  "6 6 8" "$SCRIPT_DIR/inputs2/in6"
      ;;
    7)
      test-schedule  "7 5 3" "$SCRIPT_DIR/inputs2/in7"
      ;;
    8)
      test-schedule  "1 5 4" "$SCRIPT_DIR/inputs2/in8"
      ;;
    9)
      test-schedule  "4 6 3" "$SCRIPT_DIR/inputs2/in9"
      ;;
    10)
      test-schedule  "1 7 9" "$SCRIPT_DIR/inputs2/in10"
      ;;
    11)
      test-schedule  "7 4 5" "$SCRIPT_DIR/inputs2/in11"
      ;;
    12)
      test-schedule  "2 1 4" "$SCRIPT_DIR/inputs2/in12"
      ;;
esac
