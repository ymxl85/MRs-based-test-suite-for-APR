#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "7 9 1" "$SCRIPT_DIR/inputs4/in1"
      ;;
    2)
      test-schedule  "2 0 6" "$SCRIPT_DIR/inputs4/in2"
      ;;
    3)
      test-schedule  "0 4 5" "$SCRIPT_DIR/inputs4/in3"
      ;;
    4)
      test-schedule  "1 8 2" "$SCRIPT_DIR/inputs4/in4"
      ;;
    5)
      test-schedule  "6 1 5" "$SCRIPT_DIR/inputs4/in5"
      ;;
    6)
      test-schedule  "9 9 4" "$SCRIPT_DIR/inputs4/in6"
      ;;
    7)
      test-schedule  "7 1 9" "$SCRIPT_DIR/inputs4/in7"
      ;;
    8)
      test-schedule  "9 0 8" "$SCRIPT_DIR/inputs4/in8"
      ;;
    9)
      test-schedule  "3 8 3" "$SCRIPT_DIR/inputs4/in9"
      ;;
    10)
      test-schedule  "0 3 9" "$SCRIPT_DIR/inputs4/in10"
      ;;
    11)
      test-schedule  "9 3 8" "$SCRIPT_DIR/inputs4/in11"
      ;;
    12)
      test-schedule  "0 3 8" "$SCRIPT_DIR/inputs4/in12"
      ;;
esac
