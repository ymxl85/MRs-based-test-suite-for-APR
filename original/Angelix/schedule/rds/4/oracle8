#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "6 2 7" "$SCRIPT_DIR/inputs8/in1"
      ;;
    2)
      test-schedule  "2 3 5" "$SCRIPT_DIR/inputs8/in2"
      ;;
    3)
      test-schedule  "6 2 6" "$SCRIPT_DIR/inputs8/in3"
      ;;
    4)
      test-schedule  "1 9 8" "$SCRIPT_DIR/inputs8/in4"
      ;;
    5)
      test-schedule  "5 8 2" "$SCRIPT_DIR/inputs8/in5"
      ;;
    6)
      test-schedule  "4 3 4" "$SCRIPT_DIR/inputs8/in6"
      ;;
    7)
      test-schedule  "6 7 4" "$SCRIPT_DIR/inputs8/in7"
      ;;
    8)
      test-schedule  "8 5 2" "$SCRIPT_DIR/inputs8/in8"
      ;;
    9)
      test-schedule  "6 2 9" "$SCRIPT_DIR/inputs8/in9"
      ;;
    10)
      test-schedule  "9 3 2" "$SCRIPT_DIR/inputs8/in10"
      ;;
    11)
      test-schedule  "9 3 6" "$SCRIPT_DIR/inputs8/in11"
      ;;
    12)
      test-schedule  "4 1 2" "$SCRIPT_DIR/inputs8/in12"
      ;;
esac
