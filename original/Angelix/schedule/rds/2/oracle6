#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "1 8 9" "$SCRIPT_DIR/inputs6/in1"
      ;;
    2)
      test-schedule  "9 5 1" "$SCRIPT_DIR/inputs6/in2"
      ;;
    3)
      test-schedule  "5 6 1" "$SCRIPT_DIR/inputs6/in3"
      ;;
    4)
      test-schedule  "5 4 7" "$SCRIPT_DIR/inputs6/in4"
      ;;
    5)
      test-schedule  "9 2 1" "$SCRIPT_DIR/inputs6/in5"
      ;;
    6)
      test-schedule  "0 1 1" "$SCRIPT_DIR/inputs6/in6"
      ;;
    7)
      test-schedule  "6 4 2" "$SCRIPT_DIR/inputs6/in7"
      ;;
    8)
      test-schedule  "7 8 6" "$SCRIPT_DIR/inputs6/in8"
      ;;
    9)
      test-schedule  "8 0 6" "$SCRIPT_DIR/inputs6/in9"
      ;;
    10)
      test-schedule  "9 9 7" "$SCRIPT_DIR/inputs6/in10"
      ;;
    11)
      test-schedule  "4 1 8" "$SCRIPT_DIR/inputs6/in11"
      ;;
    12)
      test-schedule  "7 5 5" "$SCRIPT_DIR/inputs6/in12"
      ;;
    13)
      test-schedule  "8 4 0" "$SCRIPT_DIR/inputs6/in13"
      ;;
    14)
      test-schedule  "4 8 2" "$SCRIPT_DIR/inputs6/in14"
      ;;
    15)
      test-schedule  "9 6 4" "$SCRIPT_DIR/inputs6/in15"
      ;;
    16)
      test-schedule  "4 1 8" "$SCRIPT_DIR/inputs6/in16"
      ;;
    17)
      test-schedule  "3 2 8" "$SCRIPT_DIR/inputs6/in17"
      ;;
    18)
      test-schedule  "4 9 3" "$SCRIPT_DIR/inputs6/in18"
      ;;
    19)
      test-schedule  "6 0 6" "$SCRIPT_DIR/inputs6/in19"
      ;;
    20)
      test-schedule  "3 8 3" "$SCRIPT_DIR/inputs6/in20"
      ;;
    21)
      test-schedule  "0 7 1" "$SCRIPT_DIR/inputs6/in21"
      ;;
    22)
      test-schedule  "1 3 3" "$SCRIPT_DIR/inputs6/in22"
      ;;
    23)
      test-schedule  "8 7 5" "$SCRIPT_DIR/inputs6/in23"
      ;;
    24)
      test-schedule  "8 7 3" "$SCRIPT_DIR/inputs6/in24"
      ;;
    25)
      test-schedule  "0 9 2" "$SCRIPT_DIR/inputs6/in25"
      ;;
    26)
      test-schedule  "4 8 9" "$SCRIPT_DIR/inputs6/in26"
      ;;
    27)
      test-schedule  "8 0 2" "$SCRIPT_DIR/inputs6/in27"
      ;;
    28)
      test-schedule  "9 4 8" "$SCRIPT_DIR/inputs6/in28"
      ;;
    29)
      test-schedule  "4 6 8" "$SCRIPT_DIR/inputs6/in29"
      ;;
    30)
      test-schedule  "3 8 6" "$SCRIPT_DIR/inputs6/in30"
      ;;
    31)
      test-schedule  "0 5 2" "$SCRIPT_DIR/inputs6/in31"
      ;;
    32)
      test-schedule  "9 8 5" "$SCRIPT_DIR/inputs6/in32"
      ;;
    33)
      test-schedule  "6 7 0" "$SCRIPT_DIR/inputs6/in33"
      ;;
    34)
      test-schedule  "4 1 1" "$SCRIPT_DIR/inputs6/in34"
      ;;
    35)
      test-schedule  "5 2 6" "$SCRIPT_DIR/inputs6/in35"
      ;;
esac
