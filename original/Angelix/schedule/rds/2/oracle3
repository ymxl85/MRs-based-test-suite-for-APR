#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "6 2 7" "$SCRIPT_DIR/inputs3/in1"
      ;;
    2)
      test-schedule  "2 5 1" "$SCRIPT_DIR/inputs3/in2"
      ;;
    3)
      test-schedule  "5 7 0" "$SCRIPT_DIR/inputs3/in3"
      ;;
    4)
      test-schedule  "7 3 4" "$SCRIPT_DIR/inputs3/in4"
      ;;
    5)
      test-schedule  "2 8 2" "$SCRIPT_DIR/inputs3/in5"
      ;;
    6)
      test-schedule  "5 1 8" "$SCRIPT_DIR/inputs3/in6"
      ;;
    7)
      test-schedule  "8 0 3" "$SCRIPT_DIR/inputs3/in7"
      ;;
    8)
      test-schedule  "5 1 1" "$SCRIPT_DIR/inputs3/in8"
      ;;
    9)
      test-schedule  "6 0 6" "$SCRIPT_DIR/inputs3/in9"
      ;;
    10)
      test-schedule  "6 9 1" "$SCRIPT_DIR/inputs3/in10"
      ;;
    11)
      test-schedule  "7 6 7" "$SCRIPT_DIR/inputs3/in11"
      ;;
    12)
      test-schedule  "5 3 9" "$SCRIPT_DIR/inputs3/in12"
      ;;
    13)
      test-schedule  "6 5 0" "$SCRIPT_DIR/inputs3/in13"
      ;;
    14)
      test-schedule  "9 4 8" "$SCRIPT_DIR/inputs3/in14"
      ;;
    15)
      test-schedule  "1 8 1" "$SCRIPT_DIR/inputs3/in15"
      ;;
    16)
      test-schedule  "3 6 1" "$SCRIPT_DIR/inputs3/in16"
      ;;
    17)
      test-schedule  "9 0 5" "$SCRIPT_DIR/inputs3/in17"
      ;;
    18)
      test-schedule  "8 5 2" "$SCRIPT_DIR/inputs3/in18"
      ;;
    19)
      test-schedule  "2 6 9" "$SCRIPT_DIR/inputs3/in19"
      ;;
    20)
      test-schedule  "7 9 7" "$SCRIPT_DIR/inputs3/in20"
      ;;
    21)
      test-schedule  "1 0 3" "$SCRIPT_DIR/inputs3/in21"
      ;;
    22)
      test-schedule  "9 4 4" "$SCRIPT_DIR/inputs3/in22"
      ;;
    23)
      test-schedule  "6 4 8" "$SCRIPT_DIR/inputs3/in23"
      ;;
    24)
      test-schedule  "1 0 0" "$SCRIPT_DIR/inputs3/in24"
      ;;
    25)
      test-schedule  "3 6 6" "$SCRIPT_DIR/inputs3/in25"
      ;;
    26)
      test-schedule  "4 6 3" "$SCRIPT_DIR/inputs3/in26"
      ;;
    27)
      test-schedule  "0 0 6" "$SCRIPT_DIR/inputs3/in27"
      ;;
    28)
      test-schedule  "3 9 0" "$SCRIPT_DIR/inputs3/in28"
      ;;
    29)
      test-schedule  "5 1 2" "$SCRIPT_DIR/inputs3/in29"
      ;;
    30)
      test-schedule  "4 0 3" "$SCRIPT_DIR/inputs3/in30"
      ;;
    31)
      test-schedule  "4 1 2" "$SCRIPT_DIR/inputs3/in31"
      ;;
    32)
      test-schedule  "0 4 9" "$SCRIPT_DIR/inputs3/in32"
      ;;
    33)
      test-schedule  "8 8 6" "$SCRIPT_DIR/inputs3/in33"
      ;;
    34)
      test-schedule  "6 0 7" "$SCRIPT_DIR/inputs3/in34"
      ;;
    35)
      test-schedule  "7 3 7" "$SCRIPT_DIR/inputs3/in35"
      ;;
esac
