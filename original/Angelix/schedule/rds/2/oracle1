#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "6 9 8" "$SCRIPT_DIR/inputs1/in1"
      ;;
    2)
      test-schedule  "3 3 9" "$SCRIPT_DIR/inputs1/in2"
      ;;
    3)
      test-schedule  "3 6 0" "$SCRIPT_DIR/inputs1/in3"
      ;;
    4)
      test-schedule  "9 2 1" "$SCRIPT_DIR/inputs1/in4"
      ;;
    5)
      test-schedule  "3 9 2" "$SCRIPT_DIR/inputs1/in5"
      ;;
    6)
      test-schedule  "7 4 7" "$SCRIPT_DIR/inputs1/in6"
      ;;
    7)
      test-schedule  "5 0 7" "$SCRIPT_DIR/inputs1/in7"
      ;;
    8)
      test-schedule  "7 6 3" "$SCRIPT_DIR/inputs1/in8"
      ;;
    9)
      test-schedule  "0 0 0" "$SCRIPT_DIR/inputs1/in9"
      ;;
    10)
      test-schedule  "9 1 0" "$SCRIPT_DIR/inputs1/in10"
      ;;
    11)
      test-schedule  "2 3 8" "$SCRIPT_DIR/inputs1/in11"
      ;;
    12)
      test-schedule  "5 8 5" "$SCRIPT_DIR/inputs1/in12"
      ;;
    13)
      test-schedule  "0 0 5" "$SCRIPT_DIR/inputs1/in13"
      ;;
    14)
      test-schedule  "9 0 5" "$SCRIPT_DIR/inputs1/in14"
      ;;
    15)
      test-schedule  "2 1 0" "$SCRIPT_DIR/inputs1/in15"
      ;;
    16)
      test-schedule  "3 2 8" "$SCRIPT_DIR/inputs1/in16"
      ;;
    17)
      test-schedule  "4 8 8" "$SCRIPT_DIR/inputs1/in17"
      ;;
    18)
      test-schedule  "0 9 6" "$SCRIPT_DIR/inputs1/in18"
      ;;
    19)
      test-schedule  "7 4 2" "$SCRIPT_DIR/inputs1/in19"
      ;;
    20)
      test-schedule  "3 3 8" "$SCRIPT_DIR/inputs1/in20"
      ;;
    21)
      test-schedule  "5 2 5" "$SCRIPT_DIR/inputs1/in21"
      ;;
    22)
      test-schedule  "4 3 0" "$SCRIPT_DIR/inputs1/in22"
      ;;
    23)
      test-schedule  "4 9 1" "$SCRIPT_DIR/inputs1/in23"
      ;;
    24)
      test-schedule  "3 4 0" "$SCRIPT_DIR/inputs1/in24"
      ;;
    25)
      test-schedule  "1 2 5" "$SCRIPT_DIR/inputs1/in25"
      ;;
    26)
      test-schedule  "7 0 6" "$SCRIPT_DIR/inputs1/in26"
      ;;
    27)
      test-schedule  "2 4 9" "$SCRIPT_DIR/inputs1/in27"
      ;;
    28)
      test-schedule  "9 0 7" "$SCRIPT_DIR/inputs1/in28"
      ;;
    29)
      test-schedule  "9 7 0" "$SCRIPT_DIR/inputs1/in29"
      ;;
    30)
      test-schedule  "6 7 5" "$SCRIPT_DIR/inputs1/in30"
      ;;
    31)
      test-schedule  "7 9 8" "$SCRIPT_DIR/inputs1/in31"
      ;;
    32)
      test-schedule  "1 2 0" "$SCRIPT_DIR/inputs1/in32"
      ;;
    33)
      test-schedule  "8 7 1" "$SCRIPT_DIR/inputs1/in33"
      ;;
    34)
      test-schedule  "7 1 0" "$SCRIPT_DIR/inputs1/in34"
      ;;
    35)
      test-schedule  "5 6 9" "$SCRIPT_DIR/inputs1/in35"
      ;;
esac
