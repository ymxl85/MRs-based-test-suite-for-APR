#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "5 9 6" "$SCRIPT_DIR/inputs10/in1"
      ;;
    2)
      test-schedule  "2 0 5" "$SCRIPT_DIR/inputs10/in2"
      ;;
    3)
      test-schedule  "7 5 9" "$SCRIPT_DIR/inputs10/in3"
      ;;
    4)
      test-schedule  "4 6 0" "$SCRIPT_DIR/inputs10/in4"
      ;;
    5)
      test-schedule  "4 1 1" "$SCRIPT_DIR/inputs10/in5"
      ;;
    6)
      test-schedule  "1 0 0" "$SCRIPT_DIR/inputs10/in6"
      ;;
    7)
      test-schedule  "9 6 7" "$SCRIPT_DIR/inputs10/in7"
      ;;
    8)
      test-schedule  "5 2 0" "$SCRIPT_DIR/inputs10/in8"
      ;;
    9)
      test-schedule  "7 8 7" "$SCRIPT_DIR/inputs10/in9"
      ;;
    10)
      test-schedule  "3 9 4" "$SCRIPT_DIR/inputs10/in10"
      ;;
    11)
      test-schedule  "1 9 7" "$SCRIPT_DIR/inputs10/in11"
      ;;
    12)
      test-schedule  "0 0 7" "$SCRIPT_DIR/inputs10/in12"
      ;;
    13)
      test-schedule  "9 0 3" "$SCRIPT_DIR/inputs10/in13"
      ;;
    14)
      test-schedule  "3 9 4" "$SCRIPT_DIR/inputs10/in14"
      ;;
    15)
      test-schedule  "3 2 9" "$SCRIPT_DIR/inputs10/in15"
      ;;
    16)
      test-schedule  "6 9 9" "$SCRIPT_DIR/inputs10/in16"
      ;;
    17)
      test-schedule  "9 3 1" "$SCRIPT_DIR/inputs10/in17"
      ;;
    18)
      test-schedule  "9 0 3" "$SCRIPT_DIR/inputs10/in18"
      ;;
    19)
      test-schedule  "2 1 7" "$SCRIPT_DIR/inputs10/in19"
      ;;
    20)
      test-schedule  "8 1 0" "$SCRIPT_DIR/inputs10/in20"
      ;;
    21)
      test-schedule  "4 6 2" "$SCRIPT_DIR/inputs10/in21"
      ;;
    22)
      test-schedule  "3 7 9" "$SCRIPT_DIR/inputs10/in22"
      ;;
    23)
      test-schedule  "7 0 0" "$SCRIPT_DIR/inputs10/in23"
      ;;
    24)
      test-schedule  "3 9 3" "$SCRIPT_DIR/inputs10/in24"
      ;;
    25)
      test-schedule  "0 2 1" "$SCRIPT_DIR/inputs10/in25"
      ;;
    26)
      test-schedule  "9 3 8" "$SCRIPT_DIR/inputs10/in26"
      ;;
    27)
      test-schedule  "5 0 8" "$SCRIPT_DIR/inputs10/in27"
      ;;
    28)
      test-schedule  "3 7 4" "$SCRIPT_DIR/inputs10/in28"
      ;;
    29)
      test-schedule  "0 2 5" "$SCRIPT_DIR/inputs10/in29"
      ;;
    30)
      test-schedule  "6 3 3" "$SCRIPT_DIR/inputs10/in30"
      ;;
    31)
      test-schedule  "5 7 9" "$SCRIPT_DIR/inputs10/in31"
      ;;
    32)
      test-schedule  "5 3 6" "$SCRIPT_DIR/inputs10/in32"
      ;;
    33)
      test-schedule  "9 5 3" "$SCRIPT_DIR/inputs10/in33"
      ;;
    34)
      test-schedule  "2 5 9" "$SCRIPT_DIR/inputs10/in34"
      ;;
    35)
      test-schedule  "3 8 6" "$SCRIPT_DIR/inputs10/in35"
      ;;
esac
