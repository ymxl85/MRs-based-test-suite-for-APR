#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "8 3 6" "$SCRIPT_DIR/inputs3/in1"
      ;;
    2)
      test-schedule  "4 0 3" "$SCRIPT_DIR/inputs3/in2"
      ;;
    3)
      test-schedule  "8 6 7" "$SCRIPT_DIR/inputs3/in3"
      ;;
    4)
      test-schedule  "9 0 5" "$SCRIPT_DIR/inputs3/in4"
      ;;
    5)
      test-schedule  "2 2 7" "$SCRIPT_DIR/inputs3/in5"
      ;;
    6)
      test-schedule  "5 8 1" "$SCRIPT_DIR/inputs3/in6"
      ;;
    7)
      test-schedule  "5 6 1" "$SCRIPT_DIR/inputs3/in7"
      ;;
    8)
      test-schedule  "5 4 0" "$SCRIPT_DIR/inputs3/in8"
      ;;
    9)
      test-schedule  "6 8 5" "$SCRIPT_DIR/inputs3/in9"
      ;;
    10)
      test-schedule  "6 7 3" "$SCRIPT_DIR/inputs3/in10"
      ;;
    11)
      test-schedule  "7 3 2" "$SCRIPT_DIR/inputs3/in11"
      ;;
    12)
      test-schedule  "1 9 6" "$SCRIPT_DIR/inputs3/in12"
      ;;
    13)
      test-schedule  "6 0 0" "$SCRIPT_DIR/inputs3/in13"
      ;;
    14)
      test-schedule  "6 4 2" "$SCRIPT_DIR/inputs3/in14"
      ;;
    15)
      test-schedule  "0 9 9" "$SCRIPT_DIR/inputs3/in15"
      ;;
esac
