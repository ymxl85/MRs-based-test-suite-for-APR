#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "0 4 7" "$SCRIPT_DIR/inputs6/in1"
      ;;
    2)
      test-schedule  "2 4 5" "$SCRIPT_DIR/inputs6/in2"
      ;;
    3)
      test-schedule  "6 2 9" "$SCRIPT_DIR/inputs6/in3"
      ;;
    4)
      test-schedule  "1 0 5" "$SCRIPT_DIR/inputs6/in4"
      ;;
    5)
      test-schedule  "3 0 4" "$SCRIPT_DIR/inputs6/in5"
      ;;
    6)
      test-schedule  "2 4 0" "$SCRIPT_DIR/inputs6/in6"
      ;;
    7)
      test-schedule  "8 4 8" "$SCRIPT_DIR/inputs6/in7"
      ;;
    8)
      test-schedule  "8 6 8" "$SCRIPT_DIR/inputs6/in8"
      ;;
    9)
      test-schedule  "8 6 3" "$SCRIPT_DIR/inputs6/in9"
      ;;
    10)
      test-schedule  "1 4 2" "$SCRIPT_DIR/inputs6/in10"
      ;;
    11)
      test-schedule  "4 5 5" "$SCRIPT_DIR/inputs6/in11"
      ;;
    12)
      test-schedule  "0 7 1" "$SCRIPT_DIR/inputs6/in12"
      ;;
    13)
      test-schedule  "6 3 1" "$SCRIPT_DIR/inputs6/in13"
      ;;
    14)
      test-schedule  "5 5 8" "$SCRIPT_DIR/inputs6/in14"
      ;;
    15)
      test-schedule  "9 2 6" "$SCRIPT_DIR/inputs6/in15"
      ;;
esac
