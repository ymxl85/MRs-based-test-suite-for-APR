#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-tcas () {
    diff -q <(${ANGELIX_RUN:-eval} ./tcas $1) <($SCRIPT_DIR/../golden/tcas $1) > /dev/null
}

case "$1" in
    1)
      test-tcas  "511 0 855 412 749 3590 2 934 453 1 1 0"
      ;;
    2)
      test-tcas  "27 1 599 654 930 8548 3 725 37 0 0 0"
      ;;
    3)
      test-tcas  "12 1 186 716 47 3608 2 383 980 0 0 0"
      ;;
    4)
      test-tcas  "391 0 992 746 964 4346 2 495 104 1 1 1"
      ;;
    5)
      test-tcas  "504 1 668 292 135 5350 1 296 916 0 1 0"
      ;;
    6)
      test-tcas  "140 0 609 95 584 7012 2 43 124 1 0 1"
      ;;
    7)
      test-tcas  "570 1 37 348 419 2109 3 13 154 0 0 0"
      ;;
    8)
      test-tcas  "766 1 810 683 198 6599 3 251 486 1 1 0"
      ;;
    9)
      test-tcas  "457 1 520 581 22 1114 2 449 210 1 0 1"
      ;;
    10)
      test-tcas  "329 1 405 698 853 113 1 883 879 0 1 0"
      ;;
    11)
      test-tcas  "320 1 203 715 284 4571 0 251 471 1 1 0"
      ;;
    12)
      test-tcas  "791 1 233 781 816 1424 3 496 146 0 0 1"
      ;;
    13)
      test-tcas  "214 0 809 457 596 8795 1 306 418 0 0 0"
      ;;
    14)
      test-tcas  "12 1 405 198 601 258 2 905 407 0 0 1"
      ;;
    15)
      test-tcas  "239 1 985 932 342 4031 2 51 974 0 0 0"
      ;;
    16)
      test-tcas  "973 1 471 124 348 4139 3 759 749 1 0 1"
      ;;
    17)
      test-tcas  "531 1 443 921 12 96 1 271 419 0 0 1"
      ;;
    18)
      test-tcas  "2 1 946 483 730 9634 0 56 21 0 1 1"
      ;;
esac
