#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-tcas () {
    diff -q <(${ANGELIX_RUN:-eval} ./tcas $1) <($SCRIPT_DIR/../golden/tcas $1) > /dev/null
}

case "$1" in
    1)
      test-tcas  "4312 1 1 8944 -6320 6368 2 542 542 0 2 0"
      ;;
    2)
      test-tcas  "6256 1 1 -1808 240 -1296 2 6396 608 0 2 1"
      ;;
    3)
      test-tcas  "4312 1 1 8944 -6320 6368 3 642 642 0 2 0"
      ;;
    4)
      test-tcas  "6256 1 1 -1808 240 -1296 3 6496 708 0 2 1"
      ;;
    5)
      test-tcas  "2168 1 1 -8976 -10000 -9776 2 2296 2400 0 2 1"
      ;;
    6)
      test-tcas  "2168 1 1 6256 -9616 -9168 3 543 543 0 2 0"
      ;;
    7)
      test-tcas  "2680 1 1 8304 32 -9072 2 -8292 -1828 0 2 0"
      ;;
    8)
      test-tcas  "760 1 1 2289 48 2224 5 -204 -100 0 2 1"
      ;;
    9)
      test-tcas  "2168 1 1 -8976 -10000 -9776 3 2396 2500 0 2 1"
      ;;
    10)
      test-tcas  "2680 1 1 8304 32 -9072 3 -8192 -1728 0 2 0"
      ;;
    11)
      test-tcas  "601 1 1 2288 -10000 6176 2 8076 724 0 2 1"
      ;;
    12)
      test-tcas  "2224 1 1 6256 240 6257 3 8376 540 0 2 1"
      ;;
    13)
      test-tcas  "3184 1 1 -5168 368 6320 2 -108 -108 0 2 1"
      ;;
    14)
      test-tcas  "5968 1 1 -10000 240 6320 1 -8292 -52 0 2 0"
      ;;
    15)
      test-tcas  "601 1 1 2288 -10000 6176 3 8176 824 0 2 1"
      ;;
    16)
      test-tcas  "3184 1 1 -5168 368 6320 3 -8 -8 0 2 1"
      ;;
    17)
      test-tcas  "5968 1 1 -10000 240 6320 2 -8152 88 0 2 0"
      ;;
esac
