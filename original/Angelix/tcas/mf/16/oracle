#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-tcas () {
    diff -q <(${ANGELIX_RUN:-eval} ./tcas $1) <($SCRIPT_DIR/../golden/tcas $1) > /dev/null
}

case "$1" in
    1)
      test-tcas  "4344 1 1 -9040 -6064 -9968 0 400 400 0 2 0"
      ;;
    2)
      test-tcas  "4336 1 1 3248 272 6352 0 7280 400 0 2 1"
      ;;
    3)
      test-tcas  "4344 1 1 -9040 -6064 -9968 1 500 500 0 2 0"
      ;;
    4)
      test-tcas  "4336 1 1 3248 272 6352 1 7380 500 0 2 1"
      ;;
    5)
      test-tcas  "6264 1 1 4337 176 4336 -1 400 404 0 2 0"
      ;;
    6)
      test-tcas  "3256 1 1 2288 -8176 208 0 2292 2400 0 2 1"
      ;;
    7)
      test-tcas  "6168 1 1 6320 112 -6416 0 -8292 6364 0 2 0"
      ;;
    8)
      test-tcas  "5912 1 1 6320 -9616 2544 -1 -203 -100 0 2 1"
      ;;
    9)
      test-tcas  "3256 1 1 2288 -8176 208 1 2392 2500 0 2 1"
      ;;
    10)
      test-tcas  "6168 1 1 6320 112 -6416 1 -8192 6464 0 2 0"
      ;;
    11)
      test-tcas  "604 1 1 -7792 -4880 4336 -1 6392 400 0 2 1"
      ;;
    12)
      test-tcas  "601 1 1 -1712 240 -16 0 2073 2096 0 2 1"
      ;;
    13)
      test-tcas  "3184 1 1 -10000 -6128 3088 0 9526 152 0 2 1"
      ;;
    14)
      test-tcas  "6320 1 1 -10000 80 -9999 2048 -8292 -52 0 2 0"
      ;;
    15)
      test-tcas  "601 1 1 -1712 240 -16 1 2173 2196 0 2 1"
      ;;
    16)
      test-tcas  "3184 1 1 -10000 -6128 3088 1 9626 252 0 2 1"
      ;;
esac
