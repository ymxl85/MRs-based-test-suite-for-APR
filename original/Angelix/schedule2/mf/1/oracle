#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule2 $1 < $2) <(angelix-eval $SCRIPT_DIR/../golden/schedule2 $1 < $2)
}

case "$1" in
    1)
      test-schedule  "2 0 0" "$SCRIPT_DIR/inputs/in1"
      ;;
    2)
      test-schedule  "2 0 1" "$SCRIPT_DIR/inputs/in2"
      ;;
    3)
      test-schedule  "2 1 0" "$SCRIPT_DIR/inputs/in3"
      ;;
    4)
      test-schedule  "2 0 0" "$SCRIPT_DIR/inputs/in4"
      ;;
    5)
      test-schedule  "2 0 1" "$SCRIPT_DIR/inputs/in5"
      ;;
    6)
      test-schedule  "2 1 0" "$SCRIPT_DIR/inputs/in6"
      ;;
esac
