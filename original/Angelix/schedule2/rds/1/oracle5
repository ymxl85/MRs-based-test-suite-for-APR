#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule2 $1 < $2) <(angelix-eval $SCRIPT_DIR/../golden/schedule2 $1 < $2)
}

case "$1" in
    1)
      test-schedule  "5 8 2" "$SCRIPT_DIR/inputs5/in1"
      ;;
    2)
      test-schedule  "4 3 6 " "$SCRIPT_DIR/inputs5/in2"
      ;;
    3)
      test-schedule  "5 9 0 " "$SCRIPT_DIR/inputs5/in3"
      ;;
    4)
      test-schedule  "0 0 8 " "$SCRIPT_DIR/inputs5/in4"
      ;;
    5)
      test-schedule  "8 9 7 " "$SCRIPT_DIR/inputs5/in5"
      ;;
    6)
      test-schedule  "4 2 8 " "$SCRIPT_DIR/inputs5/in6"
      ;;
esac
