#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule2 $1 < $2) <(angelix-eval $SCRIPT_DIR/../golden/schedule2 $1 < $2)
}

case "$1" in
    1)
      test-schedule  "7 7 3 " "$SCRIPT_DIR/inputs7/in1"
      ;;
    2)
      test-schedule  "0 5 5 " "$SCRIPT_DIR/inputs7/in2"
      ;;
    3)
      test-schedule  "7 3 7 " "$SCRIPT_DIR/inputs7/in3"
      ;;
    4)
      test-schedule  "7 4 8" "$SCRIPT_DIR/inputs7/in4"
      ;;
    5)
      test-schedule  "4 2 0 " "$SCRIPT_DIR/inputs7/in5"
      ;;
    6)
      test-schedule  "7 5 4 " "$SCRIPT_DIR/inputs7/in6"
      ;;
esac
