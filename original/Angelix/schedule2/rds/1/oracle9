#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule2 $1 < $2) <(angelix-eval $SCRIPT_DIR/../golden/schedule2 $1 < $2)
}

case "$1" in
    1)
      test-schedule  "9 5 8 " "$SCRIPT_DIR/inputs9/in1"
      ;;
    2)
      test-schedule  "7 8 4 " "$SCRIPT_DIR/inputs9/in2"
      ;;
    3)
      test-schedule  "9 8 7 " "$SCRIPT_DIR/inputs9/in3"
      ;;
    4)
      test-schedule  "1 7 6 " "$SCRIPT_DIR/inputs9/in4"
      ;;
    5)
      test-schedule  "6 4 0 " "$SCRIPT_DIR/inputs9/in5"
      ;;
    6)
      test-schedule  "5 7 0 " "$SCRIPT_DIR/inputs9/in6"
      ;;
esac
