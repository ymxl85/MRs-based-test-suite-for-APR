#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule2 $1 < $2) <(angelix-eval $SCRIPT_DIR/../golden/schedule2 $1 < $2)
}

case "$1" in
    1)
      test-schedule  "3 1 3 " "$SCRIPT_DIR/inputs6/in1"
      ;;
    2)
      test-schedule  "3 3 8 " "$SCRIPT_DIR/inputs6/in2"
      ;;
    3)
      test-schedule  "2 3 3 " "$SCRIPT_DIR/inputs6/in3"
      ;;
    4)
      test-schedule  "9 3 2" "$SCRIPT_DIR/inputs6/in4"
      ;;
    5)
      test-schedule  "9 6 0 " "$SCRIPT_DIR/inputs6/in5"
      ;;
    6)
      test-schedule  "8 3 3 " "$SCRIPT_DIR/inputs6/in6"
      ;;
esac
