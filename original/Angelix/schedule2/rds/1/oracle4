#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule2 $1 < $2) <(angelix-eval $SCRIPT_DIR/../golden/schedule2 $1 < $2)
}

case "$1" in
    1)
      test-schedule  "3 2 1 " "$SCRIPT_DIR/inputs4/in1"
      ;;
    2)
      test-schedule  "8 4 2" "$SCRIPT_DIR/inputs4/in2"
      ;;
    3)
      test-schedule  "4 6 7 " "$SCRIPT_DIR/inputs4/in3"
      ;;
    4)
      test-schedule  "6 6 3 " "$SCRIPT_DIR/inputs4/in4"
      ;;
    5)
      test-schedule  "6 6 3 " "$SCRIPT_DIR/inputs4/in5"
      ;;
    6)
      test-schedule  "8 8 1 " "$SCRIPT_DIR/inputs4/in6"
      ;;
esac
