#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule2 $1 < $2) <(angelix-eval $SCRIPT_DIR/../golden/schedule2 $1 < $2)
}

case "$1" in
    1)
      test-schedule  "8 7 9" "$SCRIPT_DIR/inputs8/in1"
      ;;
    2)
      test-schedule  "8 4 0 " "$SCRIPT_DIR/inputs8/in2"
      ;;
    3)
      test-schedule  "8 3 4 " "$SCRIPT_DIR/inputs8/in3"
      ;;
    4)
      test-schedule  "0 9 7 " "$SCRIPT_DIR/inputs8/in4"
      ;;
    5)
      test-schedule  "7 9 2 " "$SCRIPT_DIR/inputs8/in5"
      ;;
    6)
      test-schedule  "9 2 1 " "$SCRIPT_DIR/inputs8/in6"
      ;;
esac
