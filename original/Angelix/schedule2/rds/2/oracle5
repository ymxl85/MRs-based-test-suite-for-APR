#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule2 $1 < $2) <(angelix-eval $SCRIPT_DIR/../golden/schedule2 $1 < $2)
}

case "$1" in
    1)
      test-schedule  "4 2 8 " "$SCRIPT_DIR/inputs5/in1"
      ;;
    2)
      test-schedule  "1 1 9 " "$SCRIPT_DIR/inputs5/in2"
      ;;
    3)
      test-schedule  "8 6 3 " "$SCRIPT_DIR/inputs5/in3"
      ;;
    4)
      test-schedule  "7 5 0 " "$SCRIPT_DIR/inputs5/in4"
      ;;
    5)
      test-schedule  "7 9 5 " "$SCRIPT_DIR/inputs5/in5"
      ;;
    6)
      test-schedule  "8 3 8 " "$SCRIPT_DIR/inputs5/in6"
      ;;
esac
