#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule2 $1 < $2) <(angelix-eval $SCRIPT_DIR/../golden/schedule2 $1 < $2)
}

case "$1" in
    1)
      test-schedule  "2 8 3 " "$SCRIPT_DIR/inputs10/in1"
      ;;
    2)
      test-schedule  "8 5 5 " "$SCRIPT_DIR/inputs10/in2"
      ;;
    3)
      test-schedule  "8 5 9 " "$SCRIPT_DIR/inputs10/in3"
      ;;
    4)
      test-schedule  "5 5 0 " "$SCRIPT_DIR/inputs10/in4"
      ;;
    5)
      test-schedule  "5 5 6" "$SCRIPT_DIR/inputs10/in5"
      ;;
    6)
      test-schedule  "8 6 3 " "$SCRIPT_DIR/inputs10/in6"
      ;;
esac
