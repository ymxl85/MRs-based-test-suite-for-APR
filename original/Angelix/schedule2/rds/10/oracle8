#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule2 $1 < $2) <(angelix-eval $SCRIPT_DIR/../golden/schedule2 $1 < $2)
}

case "$1" in
    1)
      test-schedule  "5 8 5" "$SCRIPT_DIR/inputs8/in1"
      ;;
    2)
      test-schedule  "1 4 4 " "$SCRIPT_DIR/inputs8/in2"
      ;;
    3)
      test-schedule  "8 7 6 " "$SCRIPT_DIR/inputs8/in3"
      ;;
    4)
      test-schedule  "8 0 1 " "$SCRIPT_DIR/inputs8/in4"
      ;;
    5)
      test-schedule  "5 9 4" "$SCRIPT_DIR/inputs8/in5"
      ;;
    6)
      test-schedule  "3 2 1 " "$SCRIPT_DIR/inputs8/in6"
      ;;
esac
