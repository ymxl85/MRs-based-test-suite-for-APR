#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule2 $1 < $2) <(angelix-eval $SCRIPT_DIR/../golden/schedule2 $1 < $2)
}

case "$1" in
    1)
      test-schedule  "3 3 4 " "$SCRIPT_DIR/inputs6/in1"
      ;;
    2)
      test-schedule  "8 8 6 " "$SCRIPT_DIR/inputs6/in2"
      ;;
    3)
      test-schedule  "3 6 6 " "$SCRIPT_DIR/inputs6/in3"
      ;;
    4)
      test-schedule  "9 1 5 " "$SCRIPT_DIR/inputs6/in4"
      ;;
    5)
      test-schedule  "3 9 5 " "$SCRIPT_DIR/inputs6/in5"
      ;;
    6)
      test-schedule  "6 2 6 " "$SCRIPT_DIR/inputs6/in6"
      ;;
esac
