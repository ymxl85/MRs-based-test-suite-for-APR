#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule2 $1 < $2) <(angelix-eval $SCRIPT_DIR/../golden/schedule2 $1 < $2)
}

case "$1" in
    1)
      test-schedule  "8 2 5" "$SCRIPT_DIR/inputs3/in1"
      ;;
    2)
      test-schedule  "9 5 3 " "$SCRIPT_DIR/inputs3/in2"
      ;;
    3)
      test-schedule  "2 4 3 " "$SCRIPT_DIR/inputs3/in3"
      ;;
    4)
      test-schedule  "3 2 5 " "$SCRIPT_DIR/inputs3/in4"
      ;;
    5)
      test-schedule  "0 8 8 " "$SCRIPT_DIR/inputs3/in5"
      ;;
    6)
      test-schedule  "7 6 9" "$SCRIPT_DIR/inputs3/in6"
      ;;
esac
