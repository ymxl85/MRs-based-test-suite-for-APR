#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule2 $1 < $2) <(angelix-eval $SCRIPT_DIR/../golden/schedule2 $1 < $2)
}

case "$1" in
    1)
      test-schedule  "2 1 6 " "$SCRIPT_DIR/inputs2/in1"
      ;;
    2)
      test-schedule  "8 5 2 " "$SCRIPT_DIR/inputs2/in2"
      ;;
    3)
      test-schedule  "3 9 6 " "$SCRIPT_DIR/inputs2/in3"
      ;;
    4)
      test-schedule  "1 2 4 " "$SCRIPT_DIR/inputs2/in4"
      ;;
    5)
      test-schedule  "9 5 2 " "$SCRIPT_DIR/inputs2/in5"
      ;;
    6)
      test-schedule  "2 2 8 " "$SCRIPT_DIR/inputs2/in6"
      ;;
esac
