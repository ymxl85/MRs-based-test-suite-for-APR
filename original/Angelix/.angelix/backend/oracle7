#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "4 8 2" "$SCRIPT_DIR/inputs7/in1"
      ;;
    2)
      test-schedule  "5 8 5" "$SCRIPT_DIR/inputs7/in2"
      ;;
    3)
      test-schedule  "2 0 7" "$SCRIPT_DIR/inputs7/in3"
      ;;
    4)
      test-schedule  "1 7 9" "$SCRIPT_DIR/inputs7/in4"
      ;;
    5)
      test-schedule  "6 0 5" "$SCRIPT_DIR/inputs7/in5"
      ;;
    6)
      test-schedule  "3 4 7" "$SCRIPT_DIR/inputs7/in6"
      ;;
    7)
      test-schedule  "4 5 1" "$SCRIPT_DIR/inputs7/in7"
      ;;
    8)
      test-schedule  "9 7 1" "$SCRIPT_DIR/inputs7/in8"
      ;;
    9)
      test-schedule  "8 0 6" "$SCRIPT_DIR/inputs7/in9"
      ;;
    10)
      test-schedule  "0 5 3" "$SCRIPT_DIR/inputs7/in10"
      ;;
    11)
      test-schedule  "8 7 4" "$SCRIPT_DIR/inputs7/in11"
      ;;
    12)
      test-schedule  "8 3 8" "$SCRIPT_DIR/inputs7/in12"
      ;;
    13)
      test-schedule  "3 0 3" "$SCRIPT_DIR/inputs7/in13"
      ;;
    14)
      test-schedule  "4 3 4" "$SCRIPT_DIR/inputs7/in14"
      ;;
    15)
      test-schedule  "2 7 0" "$SCRIPT_DIR/inputs7/in15"
      ;;
esac
