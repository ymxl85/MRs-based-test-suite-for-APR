#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "9 5 0" "$SCRIPT_DIR/inputs5/in1"
      ;;
    2)
      test-schedule  "8 1 5" "$SCRIPT_DIR/inputs5/in2"
      ;;
    3)
      test-schedule  "6 0 6" "$SCRIPT_DIR/inputs5/in3"
      ;;
    4)
      test-schedule  "0 2 9" "$SCRIPT_DIR/inputs5/in4"
      ;;
    5)
      test-schedule  "5 9 6" "$SCRIPT_DIR/inputs5/in5"
      ;;
    6)
      test-schedule  "8 9 4" "$SCRIPT_DIR/inputs5/in6"
      ;;
    7)
      test-schedule  "0 1 9" "$SCRIPT_DIR/inputs5/in7"
      ;;
    8)
      test-schedule  "1 3 6" "$SCRIPT_DIR/inputs5/in8"
      ;;
    9)
      test-schedule  "6 9 0" "$SCRIPT_DIR/inputs5/in9"
      ;;
    10)
      test-schedule  "5 2 5" "$SCRIPT_DIR/inputs5/in10"
      ;;
    11)
      test-schedule  "4 0 8" "$SCRIPT_DIR/inputs5/in11"
      ;;
    12)
      test-schedule  "5 0 9" "$SCRIPT_DIR/inputs5/in12"
      ;;
    13)
      test-schedule  "1 8 2" "$SCRIPT_DIR/inputs5/in13"
      ;;
    14)
      test-schedule  "4 8 7" "$SCRIPT_DIR/inputs5/in14"
      ;;
    15)
      test-schedule  "3 9 7" "$SCRIPT_DIR/inputs5/in15"
      ;;
esac
