#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "6 0 2" "$SCRIPT_DIR/inputs9/in1"
      ;;
    2)
      test-schedule  "1 0 9" "$SCRIPT_DIR/inputs9/in2"
      ;;
    3)
      test-schedule  "7 3 0" "$SCRIPT_DIR/inputs9/in3"
      ;;
    4)
      test-schedule  "0 9 4" "$SCRIPT_DIR/inputs9/in4"
      ;;
    5)
      test-schedule  "5 1 1" "$SCRIPT_DIR/inputs9/in5"
      ;;
    6)
      test-schedule  "2 5 7" "$SCRIPT_DIR/inputs9/in6"
      ;;
    7)
      test-schedule  "2 4 7" "$SCRIPT_DIR/inputs9/in7"
      ;;
    8)
      test-schedule  "2 8 6" "$SCRIPT_DIR/inputs9/in8"
      ;;
    9)
      test-schedule  "0 2 3" "$SCRIPT_DIR/inputs9/in9"
      ;;
    10)
      test-schedule  "9 5 2" "$SCRIPT_DIR/inputs9/in10"
      ;;
    11)
      test-schedule  "5 3 3" "$SCRIPT_DIR/inputs9/in11"
      ;;
    12)
      test-schedule  "7 5 0" "$SCRIPT_DIR/inputs9/in12"
      ;;
    13)
      test-schedule  "2 9 9" "$SCRIPT_DIR/inputs9/in13"
      ;;
    14)
      test-schedule  "7 4 8" "$SCRIPT_DIR/inputs9/in14"
      ;;
    15)
      test-schedule  "5 4 5" "$SCRIPT_DIR/inputs9/in15"
      ;;
esac
