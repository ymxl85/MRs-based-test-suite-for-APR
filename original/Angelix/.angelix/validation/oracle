#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "4 4 7" "$SCRIPT_DIR/inputs10/in1"
      ;;
    2)
      test-schedule  "0 8 8" "$SCRIPT_DIR/inputs10/in2"
      ;;
    3)
      test-schedule  "5 0 9" "$SCRIPT_DIR/inputs10/in3"
      ;;
    4)
      test-schedule  "3 8 3" "$SCRIPT_DIR/inputs10/in4"
      ;;
    5)
      test-schedule  "6 2 3" "$SCRIPT_DIR/inputs10/in5"
      ;;
    6)
      test-schedule  "5 4 0" "$SCRIPT_DIR/inputs10/in6"
      ;;
    7)
      test-schedule  "6 8 8" "$SCRIPT_DIR/inputs10/in7"
      ;;
    8)
      test-schedule  "5 9 9" "$SCRIPT_DIR/inputs10/in8"
      ;;
    9)
      test-schedule  "7 8 8" "$SCRIPT_DIR/inputs10/in9"
      ;;
    10)
      test-schedule  "0 2 5" "$SCRIPT_DIR/inputs10/in10"
      ;;
    11)
      test-schedule  "9 5 6" "$SCRIPT_DIR/inputs10/in11"
      ;;
    12)
      test-schedule  "9 4 8" "$SCRIPT_DIR/inputs10/in12"
      ;;
    13)
      test-schedule  "7 8 5" "$SCRIPT_DIR/inputs10/in13"
      ;;
    14)
      test-schedule  "6 1 6" "$SCRIPT_DIR/inputs10/in14"
      ;;
    15)
      test-schedule  "0 6 7" "$SCRIPT_DIR/inputs10/in15"
      ;;
esac
