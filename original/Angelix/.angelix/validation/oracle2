#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-schedule () {
    diff <(${ANGELIX_RUN:-eval} ./schedule $2 $1) <($SCRIPT_DIR/../golden/schedule $2 $1)
}

case "$1" in
    1)
      test-schedule  "5 6 9" "$SCRIPT_DIR/inputs2/in1"
      ;;
    2)
      test-schedule  "3 9 4" "$SCRIPT_DIR/inputs2/in2"
      ;;
    3)
      test-schedule  "6 1 9" "$SCRIPT_DIR/inputs2/in3"
      ;;
    4)
      test-schedule  "9 9 6" "$SCRIPT_DIR/inputs2/in4"
      ;;
    5)
      test-schedule  "6 4 4" "$SCRIPT_DIR/inputs2/in5"
      ;;
    6)
      test-schedule  "4 1 9" "$SCRIPT_DIR/inputs2/in6"
      ;;
    7)
      test-schedule  "1 2 7" "$SCRIPT_DIR/inputs2/in7"
      ;;
    8)
      test-schedule  "4 4 8" "$SCRIPT_DIR/inputs2/in8"
      ;;
    9)
      test-schedule  "6 3 1" "$SCRIPT_DIR/inputs2/in9"
      ;;
    10)
      test-schedule  "2 8 7" "$SCRIPT_DIR/inputs2/in10"
      ;;
    11)
      test-schedule  "2 4 0" "$SCRIPT_DIR/inputs2/in11"
      ;;
    12)
      test-schedule  "1 0 4" "$SCRIPT_DIR/inputs2/in12"
      ;;
    13)
      test-schedule  "6 8 2" "$SCRIPT_DIR/inputs2/in13"
      ;;
    14)
      test-schedule  "3 2 7" "$SCRIPT_DIR/inputs2/in14"
      ;;
    15)
      test-schedule  "8 9 9" "$SCRIPT_DIR/inputs2/in15"
      ;;
esac
