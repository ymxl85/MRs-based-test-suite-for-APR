#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-replace () {
    diff <(${ANGELIX_RUN:-angelix-eval} ./replace "$1" "$2"  "$3") <(angelix-eval $SCRIPT_DIR/../golden/replace "$1" "$2" "$3")
}

case "$1" in
    1)
      test-replace  "@" "0" "s"
      ;;
    2)
      test-replace  "@" "0" "s"
      ;;
    3)
      test-replace  "@" "0" ""
      ;;
    4)
      test-replace  "r" "0" "s"
      ;;
    5)
      test-replace  "=" "0" "s"
      ;;
    6)
      test-replace  "r" "0" "s"
      ;;
    7)
      test-replace  "=" "0" "s"
      ;;
    8)
      test-replace  "r" "0" ""
      ;;
    9)
      test-replace  "=" "0" ""
      ;;
    10)
      test-replace  "" "0" "s"
      ;;
    11)
      test-replace  "%" "0" "R"
      ;;
    12)
      test-replace  "s" "0" "s"
      ;;
    13)
      test-replace  "
" "0" "s"
      ;;
    14)
      test-replace  "\$" "0" "s"
      ;;
    15)
      test-replace  "]" "0" "s"
      ;;
    16)
      test-replace  "[" "0" "s"
      ;;
    17)
      test-replace  "^" "0" "c"
      ;;
    18)
      test-replace  "-" "0" "s"
      ;;
    19)
      test-replace  "?" "0" "s"
      ;;
    20)
      test-replace  "[@]" "0" "s"
      ;;
    21)
      test-replace  "[@]" "0" "s"
      ;;
    22)
      test-replace  "[@]" "0" ""
      ;;
    23)
      test-replace  "[r]" "0" "s"
      ;;
    24)
      test-replace  "[=]" "0" "s"
      ;;
    25)
      test-replace  "[r]" "0" "s"
      ;;
    26)
      test-replace  "[=]" "0" "s"
      ;;
    27)
      test-replace  "[r]" "0" ""
      ;;
    28)
      test-replace  "[=]" "0" ""
      ;;
    29)
      test-replace  "[]" "0" "s"
      ;;
    30)
      test-replace  "[^R]" "0" "R"
      ;;
    31)
      test-replace  "[^]" "0" "R"
      ;;
    32)
      test-replace  "[^s]" "0" "s"
      ;;
    33)
      test-replace  "[^]" "0" "s"
      ;;
    34)
      test-replace  "[
]" "0" "s"
      ;;
    35)
      test-replace  "[\$]" "0" "s"
      ;;
    36)
      test-replace  "[]]" "0" "s"
      ;;
    37)
      test-replace  "[[]" "0" "s"
      ;;
    38)
      test-replace  "[^]" "0" "c"
      ;;
    39)
      test-replace  "[-]" "0" "s"
      ;;
    40)
      test-replace  "?s" "0" "sss"
      ;;
esac
