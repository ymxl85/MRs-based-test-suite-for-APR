#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-replace () {
    diff <(${ANGELIX_RUN:-angelix-eval} ./replace "$1" "$2"  "$3") <(angelix-eval $SCRIPT_DIR/../golden/replace "$1" "$2" "$3")
}

case "$1" in
    1)
      test-replace  "?" "d" "

"
      ;;
    2)
      test-replace  "?" "a" "u
"
      ;;
    3)
      test-replace  "?" "a" "
u"
      ;;
    4)
      test-replace  "?" "b" "

"
      ;;
    5)
      test-replace  "À" "b" "

"
      ;;
    6)
      test-replace  "?ÿ" "b" "

"
      ;;
    7)
      test-replace  "Àÿ" "b" "

"
      ;;
    8)
      test-replace  "?" "b" "u
"
      ;;
    9)
      test-replace  "À" "b" "u
"
      ;;
    10)
      test-replace  "?ÿ" "b" "u
"
      ;;
    11)
      test-replace  "Àÿ" "b" "u
"
      ;;
    12)
      test-replace  "?" "b" "
u"
      ;;
    13)
      test-replace  "À" "b" "
u"
      ;;
    14)
      test-replace  "?ÿ" "b" "
u"
      ;;
    15)
      test-replace  "Àÿ" "b" "
u"
      ;;
    16)
      test-replace  "[^]" "d" "

"
      ;;
    17)
      test-replace  "[^]" "a" "u
"
      ;;
    18)
      test-replace  "[^]" "a" "
u"
      ;;
    19)
      test-replace  "[^]" "b" "

"
      ;;
    20)
      test-replace  "[À]" "b" "

"
      ;;
    21)
      test-replace  "[^]ÿ" "b" "

"
      ;;
    22)
      test-replace  "[À]ÿ" "b" "

"
      ;;
    23)
      test-replace  "[^]" "b" "u
"
      ;;
    24)
      test-replace  "[À]" "b" "u
"
      ;;
    25)
      test-replace  "[^]ÿ" "b" "u
"
      ;;
    26)
      test-replace  "[À]ÿ" "b" "u
"
      ;;
    27)
      test-replace  "[^]" "b" "
u"
      ;;
    28)
      test-replace  "[À]" "b" "
u"
      ;;
    29)
      test-replace  "[^]ÿ" "b" "
u"
      ;;
    30)
      test-replace  "[À]ÿ" "b" "
u"
      ;;
esac
