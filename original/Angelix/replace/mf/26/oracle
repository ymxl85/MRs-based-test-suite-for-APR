#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-replace () {
    diff <(${ANGELIX_RUN:-angelix-eval} ./replace "$1" "$2"  "$3") <(angelix-eval $SCRIPT_DIR/../golden/replace "$1" "$2" "$3")
}

case "$1" in
    1)
      test-replace  "??" "z" "??"
      ;;
    2)
      test-replace  "??" "z" "?@"
      ;;
    3)
      test-replace  "??" "p" "?
"
      ;;
    4)
      test-replace  "??" "z" "??"
      ;;
    5)
      test-replace  "À?" "z" "??"
      ;;
    6)
      test-replace  "?À" "z" "??"
      ;;
    7)
      test-replace  "ÀÀ" "z" "??"
      ;;
    8)
      test-replace  "??" "z" "?@"
      ;;
    9)
      test-replace  "À?" "z" "?@"
      ;;
    10)
      test-replace  "?À" "z" "?@"
      ;;
    11)
      test-replace  "ÀÀ" "z" "?@"
      ;;
    12)
      test-replace  "??" "h" "?
"
      ;;
    13)
      test-replace  "À?" "h" "?
"
      ;;
    14)
      test-replace  "?À" "h" "?
"
      ;;
    15)
      test-replace  "ÀÀ" "h" "?
"
      ;;
    16)
      test-replace  "[^]?" "z" "??"
      ;;
    17)
      test-replace  "[^]?" "z" "?@"
      ;;
    18)
      test-replace  "[^]?" "p" "?
"
      ;;
    19)
      test-replace  "[^]?" "z" "??"
      ;;
    20)
      test-replace  "[À]?" "z" "??"
      ;;
    21)
      test-replace  "[^]À" "z" "??"
      ;;
    22)
      test-replace  "[À]À" "z" "??"
      ;;
    23)
      test-replace  "[^]?" "z" "?@"
      ;;
    24)
      test-replace  "[À]?" "z" "?@"
      ;;
    25)
      test-replace  "[^]À" "z" "?@"
      ;;
    26)
      test-replace  "[À]À" "z" "?@"
      ;;
    27)
      test-replace  "[^]?" "h" "?
"
      ;;
    28)
      test-replace  "[À]?" "h" "?
"
      ;;
    29)
      test-replace  "[^]À" "h" "?
"
      ;;
    30)
      test-replace  "[À]À" "h" "?
"
      ;;
esac
