#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-replace () {
    diff <(${ANGELIX_RUN:-angelix-eval} ./replace "$1" "$2"  "$3") <(angelix-eval $SCRIPT_DIR/../golden/replace "$1" "$2" "$3")
}

case "$1" in
    1)
      test-replace  "=" "" "-1(k^:UHNbjp:"
      ;;
    2)
      test-replace  ")/" "" "g)O*"
      ;;
    3)
      test-replace  "AWI(" ">4vP" "|}\$7gpITkVzV"
      ;;
    4)
      test-replace  "fe0l" "p" ">_1_}D"
      ;;
    5)
      test-replace  "" ";" "^S;LhkSR<"
      ;;
    6)
      test-replace  "\$g+/" "9Uur" "]-Yv\`\$T"
      ;;
    7)
      test-replace  "IC!u" "n)c" "]510?+n8GN0KT*kw+"
      ;;
    8)
      test-replace  "*#c>" "~]+)" "A"
      ;;
    9)
      test-replace  "fQk" "7V_" "v7"
      ;;
    10)
      test-replace  "P" "8" "A;(/9[w(g"
      ;;
    11)
      test-replace  "</" "" "QZ2"
      ;;
    12)
      test-replace  "" "q-\$" "^<){si)sn{19n1<IzT_"
      ;;
    13)
      test-replace  "(N-a" "" "[I\`\$,KxbLr5jfG?"
      ;;
    14)
      test-replace  "N" "U " "\`(,1eX0%}B["
      ;;
    15)
      test-replace  "" "FUX" " .p(hvvC%#UGXCb[T"
      ;;
    16)
      test-replace  "," "p?5" "TLEJ #G1T5My5(L"
      ;;
    17)
      test-replace  "Qj:" "X" "V>&"
      ;;
    18)
      test-replace  "YC4" "" "Lbhx4+!)?+m"
      ;;
    19)
      test-replace  "\$mYI" "9H\\" "6\$@ooceq\$V>D16"
      ;;
    20)
      test-replace  "*@F" "as" "?!@9jgLE>N;\$FI"
      ;;
    21)
      test-replace  "k\`Ei" "p" "x3?A"
      ;;
    22)
      test-replace  "Oq6" "UK)4" "Q)1+0momCwz>|8Y|"
      ;;
    23)
      test-replace  "@" "" "nn:~^5@=]zbpvj"
      ;;
esac
