#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-pt2 () {
    diff <(${ANGELIX_RUN:-angelix-eval} ./pt2 "$1") <(angelix-eval $SCRIPT_DIR/../golden/pt2 "$1")
}

case "$1" in
    1)
      test-pt2  "(=?\"^T"
      ;;
    2)
      test-pt2  "ncscI&;TBa+wK"
      ;;
    3)
      test-pt2  "x2OSxl~V/O)/"
      ;;
    4)
      test-pt2  "p%;f#\`v"
      ;;
    5)
      test-pt2  "Pqlash\`79"
      ;;
    6)
      test-pt2  "LpZ8Z"
      ;;
    7)
      test-pt2  "**F"
      ;;
    8)
      test-pt2  "Xv;{!*^k"
      ;;
    9)
      test-pt2  "is.p9q9"
      ;;
    10)
      test-pt2  "K)0wj(ZA"
      ;;
    11)
      test-pt2  "9=\$QO+^Y"
      ;;
    12)
      test-pt2  "Dg4vo&bi6%"
      ;;
esac
