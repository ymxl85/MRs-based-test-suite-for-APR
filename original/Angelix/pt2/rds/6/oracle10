#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-pt2 () {
    diff <(${ANGELIX_RUN:-angelix-eval} ./pt2 "$1") <(angelix-eval $SCRIPT_DIR/../golden/pt2 "$1")
}

case "$1" in
    1)
      test-pt2  "iJV.0LL-6}F\`K\"]Ah\;"
      ;;
    2)
      test-pt2  "GJtc@^/"
      ;;
    3)
      test-pt2  "V!tJj<\`25("
      ;;
    4)
      test-pt2  "HCK}QNg"
      ;;
    5)
      test-pt2  "<YfxjX)."
      ;;
    6)
      test-pt2  "nf\`C.lrh#/?;[l3kJ8"
      ;;
    7)
      test-pt2  ":!E\"@bWZ!"
      ;;
    8)
      test-pt2  "0hdczd"
      ;;
    9)
      test-pt2  "8_p]U@xKuO"
      ;;
    10)
      test-pt2  "r|j"
      ;;
    11)
      test-pt2  "i"
      ;;
    12)
      test-pt2  "M2e:o"
      ;;
esac
