#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-pt2 () {
    diff <(${ANGELIX_RUN:-angelix-eval} ./pt2 "$1") <(angelix-eval $SCRIPT_DIR/../golden/pt2 "$1")
}

case "$1" in
    1)
      test-pt2  "8rZ0-l(ExfI?)6t_cz"
      ;;
    2)
      test-pt2  "4^"
      ;;
    3)
      test-pt2  "1#idPulXkC"
      ;;
    4)
      test-pt2  "22"
      ;;
    5)
      test-pt2  "#R"
      ;;
    6)
      test-pt2  "%d="
      ;;
    7)
      test-pt2  "GV;Eyw7+tkk;UP#"
      ;;
    8)
      test-pt2  "<buZ)H*QsTtc@Squ="
      ;;
    9)
      test-pt2  "z\`"
      ;;
    10)
      test-pt2  "#SbUF"
      ;;
    11)
      test-pt2  "_s8jp-V46\"\`"
      ;;
    12)
      test-pt2  "RHq??>.q&3q;d"
      ;;
esac
