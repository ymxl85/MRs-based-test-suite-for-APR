#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-pt2 () {
    diff <(${ANGELIX_RUN:-angelix-eval} ./pt2 "$1") <(angelix-eval $SCRIPT_DIR/../golden/pt2 "$1")
}

case "$1" in
    1)
      test-pt2  "^,MP;)J,Kpe{9,Nc"
      ;;
    2)
      test-pt2  "yX*ol0q"
      ;;
    3)
      test-pt2  "l,/*s"
      ;;
    4)
      test-pt2  "hL\`Q9aOve.Q<\$7m*A"
      ;;
    5)
      test-pt2  ":Cj-:52&\$L/m&S3H\[p"
      ;;
    6)
      test-pt2  "=R|\$Qt1X,}Tn\$;"
      ;;
    7)
      test-pt2  "@i%JVKgGF,bw19Z"
      ;;
    8)
      test-pt2  "6VPrlcie|~m@[c%L+giP"
      ;;
    9)
      test-pt2  "z!/!+#Ef[</s,1130"
      ;;
    10)
      test-pt2  "+WpS7"
      ;;
    11)
      test-pt2  ")#(q~mWzzD"
      ;;
    12)
      test-pt2  "liw(%k~1\"4m<q9sM)@ey"
      ;;
esac
