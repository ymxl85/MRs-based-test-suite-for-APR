#!/bin/bash
set -euo pipefail
SCRIPT_DIR=$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)
test-pt2 () {
    diff <(${ANGELIX_RUN:-angelix-eval} ./pt2 "$1") <(angelix-eval $SCRIPT_DIR/../golden/pt2 "$1")
}

case "$1" in
    1)
      test-pt2  "0
0y
"
      ;;
    2)
      test-pt2  "
0p
"
      ;;
    3)
      test-pt2  "0õ0y
"
      ;;
    4)
      test-pt2  "JõJdõ"
      ;;
    5)
      test-pt2  "0
p
"
      ;;
    6)
      test-pt2  "0
0ù
"
      ;;
    7)
      test-pt2  "0
0yõ"
      ;;
    8)
      test-pt2  "01
0
"
      ;;
    9)
      test-pt2  "1
0
"
      ;;
    10)
      test-pt2  "JõJdõ
"
      ;;
    11)
      test-pt2  "01

"
      ;;
    12)
      test-pt2  "01
0y
"
      ;;
esac
